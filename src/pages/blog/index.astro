---
import BaseHead from '../../components/BaseHead.astro';
import {Header} from '../../components/Header.jsx';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col w-full h-screen content-center justify-between font-sans bg-slate-200 ">
		<Header client:load/>
		<main class="flex flex-col justify-center items-center">
			<section class="h-full w-full flex justify-center items-center flex-col gap-4">
				<ul class="flex flex-wrap max-w-6xl justify-center gap-6">
					{
						posts.map((post) => (
							<li class="m-4 max-w-xs">
								<div class="shadow-md rounded-lg overflow-hidden flex flex-col justify-center items-center">
									<img class="aspect-video max-w-xs" src={post.data.heroImage} alt={post.data.heroImageDes}>
									<div class="flex justify-around p-4 border-b-2 border-slate-300 w-full">
										<h1 class="font-semibold">{post.data.title}</h1>
										<time datetime={new Date(post.data.pubDate).toISOString()}>
											{new Date(post.data.pubDate).toLocaleDateString()}
										</time>
									</div>
									<a href={`/blog/${post.slug}/`} class="text-center block p-2 bg-cyan-700 hover:bg-cyan-500 m-2 w-32 rounded-lg text-white">Ver m√°s</a>
								</div>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
